# Slack Configuration
# Bot token from OAuth & Permissions page (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# App-level token for Socket Mode (starts with xapp-)
# Generate from Basic Information > App-Level Tokens
SLACK_APP_TOKEN=xapp-your-app-token

# Langflow Configuration
# Base URL of your Langflow server
LANGFLOW_API_URL=https://dev-langbuilder.cloudgeometry.com

# Flow ID to execute (from Langflow UI)
LANGFLOW_FLOW_ID=54f54634-e187-4d42-9c7f-30c50b0f3d90

# Langflow API key (from Langflow UI > Settings > API Keys)
LANGFLOW_API_KEY=sk-your-langflow-api-key

# Application Configuration
# Path to SQLite database file
DATABASE_PATH=./data/sessions.db

# Timeout for Langflow requests in seconds (default: 300 = 5 minutes)
# Increase if your agents take longer to process
REQUEST_TIMEOUT=300

# Cleanup sessions older than this many hours (default: 24)
SESSION_TTL_HOURS=24

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
